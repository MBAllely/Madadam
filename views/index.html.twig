<html>
    <head>
        <title>Restaurant Finder</title>
    </head>
    <body>
        <h1>Welcome to the Restaurant Finder</h1>

        <p>Create a new cuisine:</p>

        <form action="/cuisines" method="post">
            <label for="cuisine_name">Cuisine name:</label>
            <input id="cuisine_name" name="cuisine_name" type="text">

            <button type="submit">Add cuisine</button>
        </form>

        {% if cuisines is not empty %}
            <p>Here are all your cuisines:</p>
            <ul>
                {% for cuisine in cuisines %}
                    <li><a href="/cuisines/{{ cuisine.getId }}">{{ cuisine.getName }}</a></li>
                {% endfor %}
            </ul>
            <form action="/delete_cuisines" method="post">
                <button type="submit" name="button">Delete All Cuisines</button>
            </form>
        {% else %}
          <p>There are no cuisines yet!</p>
        {% endif %}

    </body>
</html>
